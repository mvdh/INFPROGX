{% extends "HROSurveyBundle:Default:base.html.twig" %}

{% block content %}
<h1>Enquetes</h1>

    {% if surveys is defined %}
    <table cellpadding="0" cellspacing="0">

        {% for survey in surveys %}
            <tr>
                <td><a href="{{ path('survey_show', { 'id': survey.id }) }}">{{survey.title}}</a></td>
                <td><a href="{{ path('survey_edit', { 'id': survey.id }) }}">Bewerk</a></td>
            </tr>
        {% endfor %}

    </table>
    {% endif %}

{% endblock %}